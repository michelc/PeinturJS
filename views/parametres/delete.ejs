<%- include("../_header.ejs") -%>

<% model.Titre = `Supprimer un·e ${model.Type}` %>

<h2><%= model.Titre %> ?</h2>

<form action="<%= model.Route %>/delete/<%= model.ID %>" method="post">
  <div class="form-horizontal">

    <%- include("_display.ejs", {model: model}) -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Confirmer !" class="btn btn-default btn-danger" />
        <a href="<%= model.Route %>" class="btn btn-outline-dark">Annuler</a>
      </div>
    </div>

  </div>
</form>

